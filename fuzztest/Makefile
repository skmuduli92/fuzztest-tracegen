	${RTL_DIR}/reg256byte.v                    \
	${RTL_DIR}/aes_top.v                       \
	${RTL_DIR}/oc8051_procarbiter.v            \
	${RTL_DIR}/oc8051_memarbiter.v             \
	${RTL_DIR}/oc8051_xiommu.v                 \
	${RTL_DIR}/sha1_core.v                     \
	${RTL_DIR}/sha1_w_mem.v                    \
	${RTL_DIR}/sha_top.v                       \
	${RTL_DIR}/modmul.v                        \
	${RTL_DIR}/modexp.v                        \
	${RTL_DIR}/modexp_top.v                    \
	${RTL_DIR}/mem_wr.v   -s oc8051_tb

.PHONY: clean

clean:
	rm -f sim Voc8051_*
	rm -f *.o
