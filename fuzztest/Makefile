	${RTL_DIR}/oc8051_rom.v                    \
	${RTL_DIR}/oc8051_cache_ram.v              \
	${RTL_DIR}/oc8051_ram_256x8_two_bist.v     \
	${RTL_DIR}/oc8051_ram_64x32_dual_bist.v    \
	${RTL_DIR}/oc8051_etr.v                    \
	${RTL_DIR}/oc8051_priv_lvl.v               \
	${RTL_DIR}/oc8051_page_table.v             \
	${RTL_DIR}/aes_128.v                       \
	${RTL_DIR}/aes_round.v                     \
	${RTL_DIR}/aes_table.v                     \
	${RTL_DIR}/reg2byte.v                      \
